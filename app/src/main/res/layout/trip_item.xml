<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextViewDepartureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:id="@+id/departure_time" />

    <TextView
        android:id="@+id/driverFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/departure_time"
        android:layout_alignStart="@+id/departure_time"
        android:layout_below="@+id/departure_time"
        android:layout_marginTop="17dp"
        android:text="TextViewFirstName" />

    <TextView
        android:id="@+id/driverPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/departure_time"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="TextViewPrice" />
</RelativeLayout>
